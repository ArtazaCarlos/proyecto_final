@model WebApplication1.ViewModels.UsuarioEditarVM

@{
    ViewData["Title"] = "EditarUsuario";
}

<h1>EditarUsuario</h1>

<h4>UsuarioEditarVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarUsuario" method="post">
            <input type="hidden" asp-for="idUsuario" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
            <div class="form-group">
                <label asp-for="apellidos" class="control-label"></label>
                <input asp-for="apellidos" class="form-control" />
                <span asp-validation-for="apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombres" class="control-label"></label>
                <input asp-for="nombres" class="form-control" />
                <span asp-validation-for="nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cuil" class="control-label"></label>
                <input asp-for="cuil" class="form-control" />
                <span asp-validation-for="cuil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="direccionCorreo" class="control-label"></label>
                <input asp-for="direccionCorreo" class="form-control" />
                <span asp-validation-for="direccionCorreo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="bloqueado" /> @Html.DisplayNameFor(model => model.bloqueado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListarUsuarios" asp-controller="Usuario">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
